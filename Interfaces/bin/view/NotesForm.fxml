<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:id="mainContentPane" fx:controller="NotesController" stylesheets="@../style/EnseignantsForm.css">
    <VBox alignment="TOP_CENTER" spacing="10">
        <HBox styleClass="top-bar">
            <Label styleClass="label-title" text="Notes Form" />
            <Button styleClass="button" text="Add Notes" onAction="#handleAdd" />
            <Button styleClass="button" text="Calcul des Moyennes" onAction="#handleUpdate" />
        </HBox>
    </VBox>
</StackPane>
