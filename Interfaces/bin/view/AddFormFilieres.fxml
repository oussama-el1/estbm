<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10" fx:controller="FilieresController" alignment="CENTER" stylesheets="@../style/add.css">
    <Label text="Add Filiere" />
    <TextField fx:id="nomFiliereField" promptText="Nom de la filiere" />
    <TextField fx:id="responsableField" promptText="ID du responsable" />
    <TextField fx:id="descriptionField" promptText="Description" />
    <Button styleClass="button" text="Submit" onAction="#handleAddSubmit" />
</VBox>
